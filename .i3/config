client.unfocused          #54414A      #54414A      #BCA5AF #BCA5AF
client.urgent             #54414A      #54414A      #00C8B3 #00C8B3p
client.background         #54414A

# disabling tile border when it's the only one visible
for_window [class="^.*"] border pixel 1
new_window 1pixel

# use window title, but no border
bindsym $mod+t border normal 0
# use no window title and a normal border
bindsym $mod+y border pixel 1
# use neither window title nor border
bindsym $mod+u border none

floating_modifier Mod1

bindsym $mod+r mode "resize"

