! urxvt

URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

!URxvt*font: -*-terminesspowerline-medium-*-*-*-14-*-*-*-*-*-iso10646-1

URxvt*font: -*-terminus-medium-*-*-*-14-*-*-*-*-*-iso10646-1
URxvt.color12: rgb:5c/5c/ff

URxvt.perl-ext-common: default,matcher,selection-to-clipboard
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1


URxvt*geometry:  120x44
URxvt*loginShell:  true
URxvt*scrollBar:  false
URxvt*fading:  45
URxvt*visualBell:  true

urxvt*dynamicColors: on

! special
*.foreground:   #dedede
*.background:   #353945
*.cursorColor:  #dedede

! black
*.color0:       #2e3436
*.color8:       #555753

! red
*.color1:       #cc0000
*.color9:       #ef2929

! green
*.color2:       #4e9a06
*.color10:      #8ae234

! yellow
*.color3:       #c4a000
*.color11:      #fce94f

! blue
*.color4:       #3465a4
*.color12:      #729fcf

! magenta
*.color5:       #75507b
*.color13:      #ad7fa8

! cyan
*.color6:       #06989a
*.color14:      #34e2e2

! white
*.color7:       #d3d7cf
*.color15:      #eeeeec


!rofi
rofi.modi:                           window,run,ssh
rofi.width:                          50
rofi.lines:                          25
rofi.columns:                        1
rofi.font:			                     Terminus 11
rofi.color-enabled:                  true
rofi.color-window: argb:ff19314F, argb:ff23599F, #D82D13
rofi.color-normal: argb:00000000, #0FCFBE, argb:00ffffff, #D82D13, #EABC2E

rofi.bw:                             0
rofi.location:                       0
rofi.padding:                        3
rofi.yoffset:                        0
rofi.xoffset:                        0

rofi.fixed-num-lines:                true
rofi.terminal:                       urxvt
rofi.ssh-client:                     ssh
rofi.ssh-command:                    {terminal} -e {ssh-client} {host}
rofi.run-command:                    {cmd}
rofi.run-list-command:
rofi.run-shell-command:              {terminal} -e {cmd}
rofi.disable-history:                false
rofi.levenshtein-sort:               false
rofi.case-sensitive:                 false
rofi.sidebar-mode:                   false

rofi.fuzzy:                          false
rofi.glob:                           false
rofi.regex:                          false

rofi.line-margin:                    2
rofi.separator-style:                solid
rofi.hide-scrollbar:                 false
rofi.fullscreen:                     false
rofi.scrollbar-width:                8
! Scrolling method. (0: Page, 1: Centered)
rofi.scroll-method:                  0
